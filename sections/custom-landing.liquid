{% schema %}
{
  "name": "Custom Landing",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Hero Heading",
      "default": "Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Hero Subheading",
      "default": "Find the perfect gift for every occasion."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Landing"
    }
  ]
}
{% endschema %}

<section class="gift-guide-hero">
  <div class="container">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
  </div>
</section>

<section class="gift-guide-products">
  <div class="grid">
    {% for block in section.blocks %}
      {% if block.type == 'product' %}
        {% assign product = all_products[block.settings.product] %}
        {% if product %}
          <div class="product-card">
            <a href="{{ product.url }}">
              <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
              <h3>{{ product.title }}</h3>
              <p>{{ product.price | money }}</p>
            </a>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>
</section>
